<div class="card">
  <div class="card-header">
    <h4><%= board.title %></h4>
    <% board.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
    <% board.areas.each do |area| %>
      <span class="badge badge-primary"><%= area.name %></span>
    <% end %>

  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(board.body) %></p>
    <p class="text-right font-weight-bold mr-10">作成者名</p>
  </div>
</div>